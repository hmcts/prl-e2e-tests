{
  "compilerOptions": {
    "target": "es2021",
    "module": "commonjs",
    "moduleResolution": "node",
    "types": ["node", "jest"],
    "allowImportingTsExtensions": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "noEmit": true,
    "outDir": "dist",
    "allowJs": false,
    "resolveJsonModule": true
  },
  "include": [
    "e2e/**/*",
    "__tests__/**/*",
    "jest.config.ts",
    "playwright.config.ts"
  ],
  "exclude": ["node_modules"]
}
